<%- include('components/header') %>

    <div class="index-container">
        <div class="container text-center">
            <div class="row justify-content-center">

                <div class="col-md-auto anta-regular">
                    <h1 style="color:#1DA1F2 ;">
                        <i class="fa-brands fa-twitter"></i>
                        <span>Twitter</span>
                    </h1>
                </div>

            </div>
            <div class="row justify-content-center poppins-regular">

                <div class=" col-md-auto">
                    <h5>Login <br> Welcome Back!</h5>
                </div>

            </div>
            <form class="row g-3 justify-content-center" action="/login" method="post">
                <div class="col-md-7 d-flex flex-column align-items-start">
                    <label for="inputEmail4" class="form-label"> <i class="fa-solid fa-envelope"></i> Email </label>
                    <input type="email" name="email" class="form-control" id="inputEmail4">
                </div>
                <div class="col-md-7 d-flex flex-column align-items-start">
                    <label for="inputPassword4" class="form-label"> <i class="fa-solid fa-lock"></i> Password</label>
                    <input type="password" name="password" class="form-control" id="inputPassword4">
                </div>
                <div class="col-7 d-flex justify-content-end">

                    <button type="submit" class="btn btn-primary">Log In</button>
                </div>
            </form>
            <p>
                <a href="/register" style="text-decoration: none;">
                    new user? click here to register
                </a>
            </p>
        </div>

    </div>

    <%- include('components/footer') %>